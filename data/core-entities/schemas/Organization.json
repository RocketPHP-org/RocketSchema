{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "Organization",
  "description": "An organization such as a company, business, institution, healthcare facility, or any formal business entity",
  "properties": [
    {
      "name": "name",
      "type": "string",
      "description": "Name of the organization",
      "required": true,
      "example": "Acme Corporation"
    },
    {
      "name": "alias",
      "type": "string[]",
      "description": "Alternate names or trading names for the organization",
      "example": ["Acme", "Acme Corp"]
    },
    {
      "name": "legalName",
      "type": "string",
      "description": "Legal registered name of the organization",
      "example": "Acme Corporation Inc."
    },
    {
      "name": "status",
      "type": "string",
      "description": "Current operational status of the organization (active, inactive, suspended, pending, dissolved)",
      "example": "active"
    },
    {
      "name": "identifier",
      "type": "Identifier[]",
      "description": "Official identifiers from various systems - tax IDs (SIREN, SIRET, EIN, VAT), registration numbers (DUNS, LEI), etc. Supports all country-specific identification systems"
    },
    {
      "name": "telecoms",
      "type": "ContactPoint[]",
      "description": "Contact points for the organization - phone numbers, emails, fax, etc. Supports multiple contacts with different purposes and priorities"
    },
    {
      "name": "onlinePresence",
      "type": "OnlinePresence[]",
      "description": "Online presence - website, social media profiles (LinkedIn, Twitter, Facebook, GitHub, etc.)"
    },
    {
      "name": "address",
      "type": "PostalAddress[]",
      "description": "Physical addresses of the organization (headquarters, branches, warehouses, mailing, etc.). Use the 'use' and 'label' fields to distinguish between address types",
      "required": true
    },
    {
      "name": "foundingDate",
      "type": "Date",
      "description": "Date when the organization was founded",
      "example": "2010-05-15"
    },
    {
      "name": "numberOfEmployees",
      "type": "number",
      "description": "Number of employees",
      "example": 250
    },
    {
      "name": "parentOrganization",
      "type": "Organization",
      "description": "Parent organization if this is a subsidiary or division"
    },
    {
      "name": "childOrganizations",
      "type": "Organization[]",
      "description": "List of subsidiary or child organizations"
    },
    {
      "name": "logo",
      "type": "string",
      "description": "URL to the organization logo",
      "format": "uri",
      "example": "https://example.com/logo.png"
    },
    {
      "name": "description",
      "type": "string",
      "description": "Detailed description of the organization and its activities"
    },
    {
      "name": "shortDescription",
      "type": "string",
      "description": "Brief description for summaries and previews"
    },
    {
      "name": "organizationType",
      "type": "string",
      "description": "Legal form of organization (Corporation, LLC, SARL, NGO, Association, etc.)",
      "example": "Corporation"
    },
    {
      "name": "activities",
      "type": "BusinessActivity[]",
      "description": "Business activities and industry sectors (primary and secondary). Supports multiple activity codes from different classification systems"
    },
    {
      "name": "bankAccounts",
      "type": "BankAccount[]",
      "description": "Bank accounts of the organization (main, payroll, international, etc.)"
    },
    {
      "name": "contacts",
      "type": "OrganizationContact[]",
      "description": "Professional contacts within the organization (sales representatives, managers, support agents, etc.)"
    },
    {
      "name": "slug",
      "type": "string",
      "description": "URL-friendly identifier for the organization",
      "example": "acme-corporation"
    },
    {
      "name": "metadata",
      "type": "object",
      "description": "Additional metadata for extensibility and custom fields"
    }
  ],
