{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "Person",
  "description": "An individual person - the base entity for representing human beings in any business context",
  "properties": [
    {
      "name": "prefix",
      "type": "string",
      "description": "Title or honorific (Mr., Mrs., Ms., Dr., Prof., etc.)",
      "example": "Dr."
    },
    {
      "name": "givenName",
      "type": "string",
      "description": "First name or given name",
      "required": true,
      "example": "John"
    },
    {
      "name": "middleName",
      "type": "string",
      "description": "Middle name(s)",
      "example": "Michael"
    },
    {
      "name": "familyName",
      "type": "string",
      "description": "Last name or family name",
      "required": true,
      "example": "Doe"
    },
    {
      "name": "suffix",
      "type": "string",
      "description": "Name suffix (Jr., Sr., III, PhD, MD, etc.)",
      "example": "Jr."
    },
    {
      "name": "preferredName",
      "type": "string",
      "description": "Name the person prefers to be called",
      "example": "Johnny"
    },
    {
      "name": "status",
      "type": "string",
      "description": "Current status (active, inactive, deceased)",
      "example": "active"
    },
    {
      "name": "gender",
      "type": "Gender",
      "description": "Gender identity (reference to Gender entity)"
    },
    {
      "name": "maritalStatus",
      "type": "MaritalStatus",
      "description": "Marital status (reference to MaritalStatus entity)"
    },
    {
      "name": "birthDate",
      "type": "Date",
      "description": "Date of birth",
      "example": "1990-01-15"
    },
    {
      "name": "nationality",
      "type": "Country[]",
      "description": "Nationality or citizenship - supports multiple nationalities (reference to Country entity)"
    },
    {
      "name": "languages",
      "type": "LanguageProficiency[]",
      "description": "Languages spoken by the person with proficiency levels"
    },
    {
      "name": "telecoms",
      "type": "ContactPoint[]",
      "description": "Contact points - phone numbers, emails, etc."
    },
    {
      "name": "onlinePresence",
      "type": "OnlinePresence[]",
      "description": "Online profiles and social media"
    },
    {
      "name": "address",
      "type": "PostalAddress[]",
      "description": "Physical addresses"
    },
    {
      "name": "photoUrl",
      "type": "string",
      "description": "URL to person's photograph or avatar",
      "format": "uri",
      "example": "https://example.com/photos/person.jpg"
    },
    {
      "name": "identifier",
      "type": "Identifier[]",
      "description": "Official identifiers - national ID, passport, driver's license, etc."
    },
    {
      "name": "metadata",
      "type": "object",
      "description": "Additional metadata for extensibility"
    }
  ],
  "examples": [
    {
      "@type": "Person",
      "prefix": "Dr.",
      "givenName": "Jane",
      "middleName": "Marie",
      "familyName": "Smith",
      "suffix": "PhD",
      "preferredName": "Jane",
      "status": "active",
      "gender": {
        "@type": "Gender",
        "code": "F",
        "label": "Female"
      },
      "birthDate": "1985-03-20",
      "telecoms": [
        {
          "@type": "ContactPoint",
          "system": "email",
          "value": "jane.smith@example.com",
          "use": "home",
          "rank": 1
        },
        {
          "@type": "ContactPoint",
          "system": "phone",
          "value": "+1-555-0999",
          "use": "mobile"
        }
      ],
      "address": [
        {
          "@type": "PostalAddress",
          "use": "home",
          "streetAddress": "123 Oak Street",
          "addressLocality": "Boston",
          "addressRegion": "MA",
          "postalCode": "02115",
          "addressCountry": "US"
        }
      ],
      "photoUrl": "https://example.com/photos/jane-smith.jpg"
    }
  ]
}
