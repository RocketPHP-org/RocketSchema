{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "MonetaryAmount",
  "description": "A monetary value with currency specification",
  "properties": [
    {
      "name": "value",
      "type": "number",
      "description": "Numeric amount",
      "required": true,
      "example": 1299.99
    },
    {
      "name": "currency",
      "type": "string",
      "description": "ISO 4217 currency code",
      "required": true,
      "format": "iso-currency-code",
      "example": "USD"
    },
    {
      "name": "minValue",
      "type": "number",
      "description": "Minimum value (for ranges)",
      "example": 100.00
    },
    {
      "name": "maxValue",
      "type": "number",
      "description": "Maximum value (for ranges)",
      "example": 500.00
    }
  ],
  "examples": [
    {
      "@type": "MonetaryAmount",
      "value": 1299.99,
      "currency": "USD"
    },
    {
      "@type": "MonetaryAmount",
      "value": 999.99,
      "currency": "EUR"
    },
    {
      "@type": "MonetaryAmount",
      "minValue": 100.00,
      "maxValue": 500.00,
      "currency": "USD"
    }
  ]
}
