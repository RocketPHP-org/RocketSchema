{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "InvoiceLineItem",
  "description": "A single line item on an invoice",
  "properties": [
    {
      "name": "description",
      "type": "string",
      "description": "Description of the item or service",
      "required": true,
      "example": "Consulting Services"
    },
    {
      "name": "product",
      "type": "Product",
      "description": "Reference to the product being invoiced"
    },
    {
      "name": "quantity",
      "type": "number",
      "description": "Quantity of items",
      "required": true,
      "example": 10
    },
    {
      "name": "unitPrice",
      "type": "MonetaryAmount",
      "description": "Price per unit",
      "required": true
    },
    {
      "name": "totalPrice",
      "type": "MonetaryAmount",
      "description": "Total price for this line (quantity Ã— unitPrice)",
      "required": true
    },
    {
      "name": "taxRate",
      "type": "number",
      "description": "Tax rate as percentage",
      "example": 10
    },
    {
      "name": "taxAmount",
      "type": "MonetaryAmount",
      "description": "Tax amount for this line"
    },
    {
      "name": "discount",
      "type": "MonetaryAmount",
      "description": "Discount applied to this line"
    }
  ],
  "examples": [
    {
      "@type": "InvoiceLineItem",
      "description": "Premium Laptop",
      "quantity": 2,
      "unitPrice": {
        "@type": "MonetaryAmount",
        "value": 1299.99,
        "currency": "USD"
      },
      "totalPrice": {
        "@type": "MonetaryAmount",
        "value": 2599.98,
        "currency": "USD"
      },
      "taxRate": 10,
      "taxAmount": {
        "@type": "MonetaryAmount",
        "value": 260.00,
        "currency": "USD"
      }
    }
  ]
}
