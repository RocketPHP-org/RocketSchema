{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "Invoice",
  "description": "A commercial invoice for goods or services - includes invoices, credit notes, and proforma invoices",
  "properties": [
    {
      "name": "invoiceNumber",
      "type": "string",
      "description": "Unique invoice identifier",
      "required": true,
      "example": "INV-2024-001"
    },
    {
      "name": "invoiceDate",
      "type": "string",
      "description": "Date the invoice was issued",
      "required": true,
      "format": "date",
      "example": "2024-01-15"
    },
    {
      "name": "dueDate",
      "type": "string",
      "description": "Payment due date",
      "format": "date",
      "example": "2024-02-15"
    },
    {
      "name": "seller",
      "type": "Organization",
      "description": "Organization issuing the invoice",
      "required": true
    },
    {
      "name": "customer",
      "type": ["Organization", "Person"],
      "description": "Customer receiving the invoice",
      "required": true
    },
    {
      "name": "billingAddress",
      "type": "PostalAddress",
      "description": "Billing address"
    },
    {
      "name": "lineItems",
      "type": ["InvoiceLineItem"],
      "description": "List of items on the invoice",
      "required": true
    },
    {
      "name": "totalAmount",
      "type": "MonetaryAmount",
      "description": "Total invoice amount including tax",
      "required": true
    },
    {
      "name": "taxAmount",
      "type": "MonetaryAmount",
      "description": "Total tax amount"
    },
    {
      "name": "subtotal",
      "type": "MonetaryAmount",
      "description": "Subtotal before tax"
    },
    {
      "name": "paymentStatus",
      "type": "string",
      "description": "Payment status",
      "example": "paid"
    },
    {
      "name": "paymentMethod",
      "type": "string",
      "description": "Method of payment",
      "example": "bank_transfer"
    },
    {
      "name": "paymentTerms",
      "type": "string",
      "description": "Payment terms and conditions",
      "example": "Net 30"
    },
    {
      "name": "notes",
      "type": "string",
      "description": "Additional notes or comments"
    }
  ],
  "examples": [
    {
      "@type": "Invoice",
      "invoiceNumber": "INV-2024-001",
      "invoiceDate": "2024-01-15",
      "dueDate": "2024-02-15",
      "seller": {
        "@type": "Organization",
        "name": "Acme Corp",
        "taxID": "US123456789"
      },
      "customer": {
        "@type": "Organization",
        "name": "Client Company Inc."
      },
      "lineItems": [
        {
          "@type": "InvoiceLineItem",
          "description": "Consulting Services",
          "quantity": 10,
          "unitPrice": {
            "@type": "MonetaryAmount",
            "value": 150.00,
            "currency": "USD"
          },
          "totalPrice": {
            "@type": "MonetaryAmount",
            "value": 1500.00,
            "currency": "USD"
          }
        }
      ],
      "subtotal": {
        "@type": "MonetaryAmount",
        "value": 1500.00,
        "currency": "USD"
      },
      "taxAmount": {
        "@type": "MonetaryAmount",
        "value": 150.00,
        "currency": "USD"
      },
      "totalAmount": {
        "@type": "MonetaryAmount",
        "value": 1650.00,
        "currency": "USD"
      },
      "paymentStatus": "pending",
      "paymentTerms": "Net 30"
    }
  ]
}
