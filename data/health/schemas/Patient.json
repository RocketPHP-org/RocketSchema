{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "Patient",
  "description": "Demographics and administrative information about an individual receiving care or other health-related services. Based on HL7 FHIR R4 Patient resource (http://hl7.org/fhir/R4/patient.html)",
  "extends": "Person",
  "properties": [
    {
      "name": "active",
      "type": "boolean",
      "description": "Whether this patient record is in active use. Many systems use this to mark non-current patients (not seen for a period). Deceased patients may be marked inactive but can be active for some time after death.",
      "required": true,
      "example": true
    },
    {
      "name": "deceasedBoolean",
      "type": "boolean",
      "description": "Indicates if the patient is deceased. If boolean, true means deceased."
    },
    {
      "name": "deceasedDateTime",
      "type": "Date",
      "description": "Date and time of death if known",
      "example": "2024-03-15"
    },
    {
      "name": "multipleBirthBoolean",
      "type": "boolean",
      "description": "Indicates whether the patient is part of a multiple birth"
    },
    {
      "name": "multipleBirthInteger",
      "type": "number",
      "description": "Birth order in multiple birth (e.g., 1 for first twin, 2 for second)",
      "example": 1
    },
    {
      "name": "contact",
      "type": "PatientContact[]",
      "description": "Contact parties for the patient (e.g., guardian, partner, friend, emergency contact) with relationship and contact details"
    },
    {
      "name": "communication",
      "type": "PatientCommunication[]",
      "description": "Languages which may be used to communicate with the patient about their health, with proficiency levels and preferences"
    },
    {
      "name": "generalPractitioner",
      "type": "Practitioner[]",
      "description": "Patient's nominated primary care provider(s) or care team"
    },
    {
      "name": "managingOrganization",
      "type": "Organization",
      "description": "Organization that is the custodian of the patient record"
    },
    {
      "name": "link",
      "type": "PatientLink[]",
      "description": "Links to other patient resources that concern the same actual person (for record linkage/merging)"
    },
    {
      "name": "identityVerification",
      "type": "IdentityVerification",
      "description": "Identity verification status with regional support (French INS, European eIDAS, US verification). Contains verification method, date, identity traits, and qualification level."
    },
    {
      "name": "ethnicity",
      "type": "string",
      "description": "US Core extension: Ethnicity categorization (Hispanic or Latino, Not Hispanic or Latino)",
      "example": "Not Hispanic or Latino"
    },
    {
      "name": "birthSex",
      "type": "string",
      "description": "US Core extension: Sex assigned at birth (M, F, UNK)",
      "example": "F"
    },
    {
      "name": "interpreterRequired",
      "type": "boolean",
      "description": "US Core extension: Whether an interpreter is needed for medical communication"
    },
    {
      "name": "allergyStatus",
      "type": "string",
      "description": "Summary allergy status (UNKNOWN, NO_KNOWN_ALLERGIES, SEE_ALLERGY_LIST)",
      "example": "SEE_ALLERGY_LIST"
    },
    {
      "name": "disabilityAccommodations",
      "type": "string[]",
      "description": "Required accommodations for disabilities (wheelchair access, visual aids, hearing assistance, etc.)"
    },
    {
      "name": "advanceDirective",
      "type": "boolean",
      "description": "Whether the patient has an advance directive, living will, or healthcare proxy on file"
    },
    {
      "name": "organDonor",
      "type": "boolean",
      "description": "Whether the patient is registered as an organ donor"
    },
    {
      "name": "notes",
      "type": "string",
      "description": "Additional clinical or administrative notes about the patient",
      "example": "Patient prefers morning appointments"
    },
    {
      "name": "metadata",
      "type": "object",
      "description": "Additional metadata for extensibility - custom fields, extensions, or facility-specific data"
    }
  ],
