{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "PasswordHistory",
  "description": "Password history to prevent reuse (normalized from UserAuthentication)",
  "properties": [
    {
      "name": "userId",
      "type": "uuid",
      "mode": "stored",
      "description": "User reference",
      "required": true
    },
    {
      "name": "passwordHash",
      "type": "string",
      "mode": "stored",
      "description": "Historical password hash",
      "required": true,
      "private": true
    },
    {
      "name": "usedFrom",
      "type": "DateTime",
      "mode": "stored",
      "description": "When password was set",
      "required": true
    },
    {
      "name": "usedUntil",
      "type": "DateTime",
      "mode": "stored",
      "description": "When password was changed",
      "nullable": true
    },
    {
      "name": "changedReason",
      "type": "string",
      "mode": "enum",
      "description": "Reason for password change",
      "enum": ["user_initiated", "expired", "reset", "admin_reset", "compromised"],
      "nullable": true
    },
    {
      "name": "changedBy",
      "type": "User",
      "mode": "stored",
      "description": "Who changed the password",
      "nullable": true
    },
    {
      "name": "createdAt",
      "type": "DateTime",
      "mode": "stored",
      "description": "Creation timestamp",
      "required": true
    }
  ],
  "indexes": [
    {
      "fields": ["userId", "usedFrom"],
      "unique": true
    },
    {
      "fields": ["userId", "createdAt"],
      "name": "idx_user_history_order"
    }
  ]
}
