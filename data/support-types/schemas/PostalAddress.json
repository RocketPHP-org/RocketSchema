{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "PostalAddress",
  "description": "Physical mailing address with optional geographic coordinates",
  "properties": [
    {
      "name": "use",
      "type": "string",
      "description": "Purpose of this address (work, home, billing, shipping, headquarters, branch, warehouse, mailing)",
      "example": "work"
    },
    {
      "name": "label",
      "type": "string",
      "description": "Human-readable label for this address",
      "example": "Head Office"
    },
    {
      "name": "streetAddress",
      "type": "string",
      "description": "Street address (number and street name)",
      "required": true,
      "example": "123 Main Street"
    },
    {
      "name": "addressLocality",
      "type": "string",
      "description": "City or locality",
      "required": true,
      "example": "San Francisco"
    },
    {
      "name": "addressRegion",
      "type": "string",
      "description": "State, province, or region",
      "example": "CA"
    },
    {
      "name": "postalCode",
      "type": "string",
      "description": "Postal or ZIP code",
      "required": true,
      "example": "94105"
    },
    {
      "name": "addressCountry",
      "type": "string",
      "description": "Country (ISO 3166-1 alpha-2 country code)",
      "required": true,
      "format": "iso-country-code",
      "example": "US"
    },
    {
      "name": "postOfficeBoxNumber",
      "type": "string",
      "description": "P.O. Box number if applicable",
      "example": "PO Box 123"
    },
    {
      "name": "latitude",
      "type": "number",
      "description": "Geographic latitude coordinate for precise location",
      "example": 37.7749
    },
    {
      "name": "longitude",
      "type": "number",
      "description": "Geographic longitude coordinate for precise location",
      "example": -122.4194
    }
  ],
  "examples": [
    {
      "@type": "PostalAddress",
      "streetAddress": "123 Main Street",
      "addressLocality": "San Francisco",
      "addressRegion": "CA",
      "postalCode": "94105",
      "addressCountry": "US",
      "latitude": 37.7749,
      "longitude": -122.4194
    },
    {
      "@type": "PostalAddress",
      "streetAddress": "10 Rue de la Paix",
      "addressLocality": "Paris",
      "postalCode": "75002",
      "addressCountry": "FR",
      "latitude": 48.8698,
      "longitude": 2.3308
    }
  ]
}
