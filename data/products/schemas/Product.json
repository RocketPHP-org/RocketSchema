{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "Product",
  "description": "A product or service offered by an organization - physical goods, digital products, or services",
  "properties": [
    {
      "name": "name",
      "type": "string",
      "description": "Name of the product",
      "required": true,
      "example": "Premium Laptop"
    },
    {
      "name": "description",
      "type": "string",
      "description": "Detailed description of the product",
      "example": "High-performance laptop for professionals"
    },
    {
      "name": "sku",
      "type": "string",
      "description": "Stock Keeping Unit - unique product identifier",
      "example": "LAP-PRE-001"
    },
    {
      "name": "brand",
      "type": "string",
      "description": "Brand name",
      "example": "TechBrand"
    },
    {
      "name": "manufacturer",
      "type": "Organization",
      "description": "Organization that manufactures the product"
    },
    {
      "name": "price",
      "type": "MonetaryAmount",
      "description": "Current selling price",
      "required": true
    },
    {
      "name": "category",
      "type": "string",
      "description": "Product category",
      "example": "Electronics"
    },
    {
      "name": "weight",
      "type": "QuantitativeValue",
      "description": "Weight of the product"
    },
    {
      "name": "dimensions",
      "type": "QuantitativeValue",
      "description": "Physical dimensions"
    },
    {
      "name": "image",
      "type": "string",
      "description": "URL to product image",
      "format": "uri",
      "example": "https://example.com/product.jpg"
    },
    {
      "name": "inStock",
      "type": "boolean",
      "description": "Whether the product is currently in stock",
      "example": true
    },
    {
      "name": "stockQuantity",
      "type": "number",
      "description": "Number of units in stock",
      "example": 150
    }
  ],
  "examples": [
    {
      "@type": "Product",
      "name": "Premium Laptop",
      "description": "High-performance laptop with 16GB RAM and 512GB SSD",
      "sku": "LAP-PRE-001",
      "brand": "TechBrand",
      "price": {
        "@type": "MonetaryAmount",
        "value": 1299.99,
        "currency": "USD"
      },
      "category": "Electronics",
      "inStock": true,
      "stockQuantity": 150
    }
  ]
}
