{
  "@type": "Schema",
  "@context": "https://rocketschema.org/context",
  "name": "SocialSecurityTax",
  "description": "Social security and payroll tax configuration. Defines employer and employee contribution rates, wage bases, and caps.",
  "properties": [
    {
      "name": "tax",
      "type": "Tax",
      "mode": "stored",
      "description": "Reference to the base Tax entity",
      "required": true
    },
    {
      "name": "socialSecurityType",
      "type": "string",
      "mode": "enum",
      "enum": [
        "old_age_pension",
        "disability_insurance",
        "health_insurance",
        "unemployment_insurance",
        "workers_compensation",
        "family_benefits",
        "training_contribution",
        "general"
      ],
      "description": "Type of social security contribution",
      "required": true,
      "example": "old_age_pension"
    },
    {
      "name": "employerRate",
      "type": "number",
      "mode": "stored",
      "description": "Employer contribution rate as percentage",
      "required": true,
      "example": 6.2
    },
    {
      "name": "employeeRate",
      "type": "number",
      "mode": "stored",
      "description": "Employee contribution rate as percentage",
      "required": true,
      "example": 6.2
    },
    {
      "name": "annualWageBase",
      "type": "MonetaryAmount",
      "mode": "stored",
      "description": "Maximum annual wages subject to this tax (cap)"
    },
    {
      "name": "taxCapPerEmployee",
      "type": "MonetaryAmount",
      "mode": "computed",
      "description": "Maximum tax amount per employee (computed from annualWageBase * rate)"
    }
  ],
  "examples": [
    {
      "@type": "SocialSecurityTax",
      "tax": {
        "@type": "Tax",
        "code": "US-SOCIAL-SECURITY"
      },
      "socialSecurityType": "old_age_pension",
      "employerRate": 6.2,
      "employeeRate": 6.2,
      "annualWageBase": {
        "value": 160200,
        "currency": "USD"
      }
    },
    {
      "@type": "SocialSecurityTax",
      "tax": {
        "@type": "Tax",
        "code": "FR-URSSAF-HEALTH"
      },
      "socialSecurityType": "health_insurance",
      "employerRate": 13.0,
      "employeeRate": 0.0,
      "annualWageBase": {
        "value": 999999,
        "currency": "EUR"
      }
    },
    {
      "@type": "SocialSecurityTax",
      "tax": {
        "@type": "Tax",
        "code": "DZ-CNAS"
      },
      "socialSecurityType": "general",
      "employerRate": 26.0,
      "employeeRate": 9.0
    }
  ]
}
